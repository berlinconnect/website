.col
  float left
  box-sizing border-box

.col-inline
  display:inline-block
  box-sizing: border-box
  vertical-align: middle

.col-right
  float right
  box-sizing border-box


for num in (1..12)
  .col-{num}
    width: (num / 12) * 100%

    &.square
      padding-bottom: (num / 12) * 100%
      height 0


sizes = "xsm" $breakpoint-xsm,
        "sm" $breakpoint-sm,
        "md" $breakpoint-md,
        "lg" $breakpoint-lg,
        "xlg" $breakpoint-xlg

  for size in sizes
    @media ({size[1]})
      .{size[0]}-col
        float left
        box-sizing border-box

      .{size}-col-right
        float right
        box-sizing border-box

      for number in (1..12)
        .{size}-col-{number}
          width (number / 12) * 100%

          &.square
            padding-bottom: (number / 12) * 100%
            height 0
