  body
    &:before
      content 'sm'
      position fixed
      top 20px
      left 20px
      background red
      color white
      z-index 100

    h1, .h1
      &.huge
        font-size ($h1 / 0.8)
        line-height $line-height - 0.2

  .sm-show-inline
    display inline-block !important

  .sm-show
    display block !important

  .sm-hide
    display none !important

@media $breakpoint-md

  body::before
    content 'md'
    position fixed
    top 20px
    left 20px
    background red
    color white
    z-index 100

  .md-show-inline
    display inline-block !important

  .md-show
    display block !important

