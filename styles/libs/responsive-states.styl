  body
    &:before
      content 'lg'
      position fixed
      top 20px
      left 20px
      background red
      color white
      z-index 100

    h1, .h1
      font-size $h1
      font-weight $light-font-weight

      &.huge
        font-size $h1 + 2px

  .lg-show-inline
    display inline-block !important

  .lg-show
    display block !important

  .lg-hide
    display none !important

