    z-index 100

  .xlg-show-inline
    display inline-block !important

  .xlg-show
    display block !important

  .xlg-hide
    display none !important

.display-none
  display none !important

.hide
  position absolute !important
  height 1px !important
  width 1px !important
  overflow hidden
  clip rect(1px, 1px, 1px, 1px)
