  body
    &::before
      content 'xsm'
      position fixed
      top 20px
      left 20px
      background red
      color white
      z-index 100

    h1, .h1
      font-size ($h1 / 1.2)
      line-height $line-height - 0.2

      &.huge
        font-size ($h1 / 1)
        line-height $line-height - 0.2

  .xsm-show-inline
    display inline-block !important

  .xsm-show
