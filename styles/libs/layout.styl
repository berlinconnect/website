.inline
  display inline

.block
  display block

.inline-block
  display inline-block

.border-box
  box-sizing border-box

.vm
  vertical-align middle

.vt
  vertical-align top

.overflow-hidden
  overflow hidden

.overflow-scroll
  overflow scroll

.overflow-auto
  overflow auto

.clearfix:before,
.clearfix:after
  content " "
  display table

.clearfix:after
  clear both

.left
  float left

.right
  float right

.no-float
  float none

.fit
  max-width 100%

.half-width
  width 50%

.full-width
  width 100%

.full-height
  min-height 100%

.height-auto
  height auto

.body-full-height
  height 100%
  min-height 100%

.container
  max-width $container-width
  margin-left auto
  margin-right auto
  padding $space-1

.sticky
  position -webkit-sticky
  position -moz-sticky
  position -ms-sticky
  position -o-sticky

.middle
  position absolute
  top 50%
  transform translateY(-50%)

figure.video
  position relative
  padding-bottom 56.25% /* 16:9 */
  padding-top 25px
  height 0
  margin 50px 0

figure.video iframe
  position absolute
  top 0
  left 0
  width 100%
  height 100%
