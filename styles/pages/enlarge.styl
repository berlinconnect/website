#filters
  li.is-checked
    background $bc-blue

.filler
  padding-bottom 50%
  width (6 / 12) * 100%

.bubble-graphic
  height 120px
  width 120px
  background-repeat no-repeat
  background-position center center

.posts
  height auto !important

.post
  height 0
  display inline-block
  backface-visibility hidden

  p.description
    display none

  &:hover
    .bg-image
      transform scale(1.4)

  .bg-image
    transform scale(1)
    transition all 27000ms linear

  &.featured
    padding-bottom 50%
    width (6 / 12) * 100%

    p.description
      display block

    .content
      padding-left $space-4
      padding-right $space-4

  &.normal
    width (6 / 12) * 100%
    padding-bottom 25%

    .content
      padding-left $space-4
      padding-right $space-4

  &.small
    width (3 / 12) * 100%
    padding-bottom 25%

    .content
      padding-left $space-2
      padding-right $space-2

@media $breakpoint-max-sm
  body
    .post
      height auto
      width 100% !important
      position relative !important
      top 0 !important
      display block !important
      padding-bottom 60%

      &.featured
        p.description
          display none
