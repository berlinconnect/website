.col
  float left
  box-sizing border-box

.col-inline
  display:inline-block
  box-sizing: border-box
  vertical-align: middle

.col-right
  float right
  box-sizing border-box


for num in (1..12)
  .col-{num}
    width: (num / 12) * 100%

    &.square
      padding-bottom: (num / 12) * 100%
      height 0

sizes = xsm sm md lg xlg
  for size in sizes
    @media ($breakpoint-{size})

      .{size}-col
        float left
        box-sizing border-box

      .{size}-col-right
        float right
        box-sizing border-box

        for number in (1..12)
          .{size}-col-{number}
            width (number / 12) * 100%


