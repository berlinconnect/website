.navigation-button
  width 50px
  height 50px
  right $space-3
  top $space-3
  cursor pointer

  &.close
    .hamburger
      span.topPosition
        transform: translateY(7px) rotate(-45deg)
      span.middlePosition
        transform scaleX(0)
        opacity 0
      span.bottomPosition
        transform: translateY(-7px) rotate(45deg)

.hamburger
  width 20px
  height: 16px
  left 15px
  top 17px

  span
    width 100%
    height 2px
    margin-bottom 5px
    will-change transform
    transition all 600ms cubic-bezier(0.645, 0.045, 0.355, 1)

    &:last-child
      margin-bottom 0



.sidebar-container
  width 100%
  z-index: 1
  overflow: hidden

  &.show
    .sidebar
      transform translateX(0) translateZ(0)

  &.show + .stage
    transform translateX(-160px) translateZ(0)

  &.behind
    width 0

  .sidebar
    width 360px
    will-change transform
    transform translateX(360px) translateZ(0)
    transition transform 600ms cubic-bezier(0.645, 0.045, 0.355, 1)

.stage
  will-change transform
  transform translateX(0) translateZ(0)
  transition transform 600ms cubic-bezier(0.645, 0.045, 0.355, 1)




