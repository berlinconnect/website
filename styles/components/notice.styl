@keyframes fadeInUpNotice
  0%
    bottom -100px
  100%
    bottom 0

.overlay
  height 20px
  width 20px
  border-radius 40px
  background-color rgba(white,0.9)
  position fixed
  left 50%
  top 100%
  margin -10px 0 0 -10px
  z-index 4
  transform scale(0)
  opacity 0
  transition all 600ms cubic-bezier(0.205, 0.000, 0.000, 1.000)

  &.zoomed
    opacity 1
    top 50%
    transform scale(100)

.notice
  width 360px
  min-height 340px
  left 50%
  bottom 0
  transform translateY(-40%) translateX(-180px)
  will-change transform
  transition all 400ms cubic-bezier(0.205, 0.000, 0.000, 1.000)
  background white
  animation-name fadeInUpNotice
  animation-delay 3000ms

  // & ~ .stage
  //   opacity 0.3

  .header
    .heading
      transform translateY(-50px)
      transition all 400ms cubic-bezier(0.205, 0.000, 0.000, 1.000)

    .header-image
      transition all 400ms cubic-bezier(0.205, 0.000, 0.000, 1.000)
      transform translateY(-50px)

  &.minified:hover
    bottom 6px

  .header
    height 160px
    transition all 400ms cubic-bezier(0.205, 0.000, 0.000, 1.000)

  &.minified
    transform translateY(88%) translateX(-180px)

    & ~ .stage
      opacity 1

    .header
      .heading
        transform translateY(0)

      .header-image
        transform translateY(0)

@media $breakpoint-tiny
  body
    .notice
      width 100%
      height 100%
      left 0
      top 0
      bottom 0
      right 0
      margin 0
      transform translateY(0%) translateX(0)

      & > div
        min-height 100%

      .buttons
        width 100%
        position absolute
        bottom 0
        left 0

      &.minified
        transform translateY(100%) translateX(0)
        margin -50px 0 0 0
